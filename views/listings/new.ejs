<!-- ‚úÖ Map Logic -->
<script>
  const cityInput = document.getElementById("location");
  const countryInput = document.getElementById("country");

  cityInput.addEventListener("blur", async () => {
    const city = cityInput.value.trim();
    if (!city) return;

    try {
      const res = await fetch(`https://nominatim.openstreetmap.org/search?q=${encodeURIComponent(city)}&format=json&limit=1`, {
        headers: {
          "User-Agent": "SerevaApp/1.0 (youremail@example.com)" // recommended by Nominatim
        }
      });

      const data = await res.json();

      if (data.length > 0) {
        const address = data[0].display_name.split(",");
        const country = address[address.length - 1].trim();

        countryInput.value = country || "Unknown Country";
      } else {
        countryInput.value = "Unknown Country";
      }
    } catch (err) {
      console.error("üåç Country autofill failed:", err);
      countryInput.value = "Unknown Country";
    }
  });
</script>



